<div class="col-sm-offset-6 col-sm-6">
  <h2>Business Details</h2>
</div>
<%= form_for(@businessdetail, html: {class: 'form-horizontal'}) do |f| %>

  <div class="form-group">
    <%= f.label :business_name, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :business_name, class: "form-control", autofocus: true %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :address_line_1, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :address_line_1, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address_line_2, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :address_line_2, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :zip_code, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :zip_code, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :city, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :state, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :state, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :country, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="actions">
    <div class="col-sm-offset-4 col-sm-6">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
